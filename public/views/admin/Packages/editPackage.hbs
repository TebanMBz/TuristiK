<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        {{>sidebar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                {{>topbar}}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <div class="card shadow border-left-dark">
                        <div class="card-header py-3 d-flex justify-content-center">
                            <h2 class="m-0 font-weight-bold text-dark">
                                Agregar paquete
                            </h2>
                        </div>

                        <form class="needs-validation pt-5" novalidate>
                            <div class="container justify-content-center align-items-center">
                                <div class="row">
                                    <div class="form-group col-6">
                                        <label for="name" class="form-label">Nombre</label>
                                        <div class="input-group">
                                            <input type="text" id="name" class="form-control border-left-dark"
                                                placeholder="Ingrese el nombre del paqute" required
                                                value="Escapada al peñol">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text rounded-right" id="basic-addon1"><i
                                                        class="fas fa-users"></i></span>
                                            </div>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="destiny" class="form-label">Destino</label>
                                        <div class="input-group">
                                            <input type="text" id="destiny" class="form-control border-left-dark"
                                                placeholder="Ingrese el destino del paqute" required value="Guatape">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text rounded-right" id="basic-addon1"><i
                                                        class="fas fa-users"></i></span>
                                            </div>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-12">
                                        <label for="details" class="form-label">Destino</label>
                                        <div class="input-group">
                                            <textarea class="form-control border-left-dark"
                                                placeholder="Escribe una descripcion aqui" id="floatingTextarea"
                                                style="height: 100px" required>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Temporibus eum eligendi consectetur cupiditate.
                                            </textarea>
                                            <div class="input-group-prepend">
                                                <span class="input-group-text rounded-right" id="basic-addon1"><i
                                                        class="fas fa-users"></i></span>
                                            </div>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-6">
                                        <label for="transportation" class="form-label">Transporte</label>
                                        <select class="custom-select border-left-dark" id="transportation" required>
                                            <option disabled value="">Seleccione el tipo de transporte</option>
                                            <option value="1">Aereo</option>
                                            <option selected value="2">Terreste</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Por favor seleccione una opción.
                                        </div>
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="hotel" class="form-label">Hotel</label>
                                        <div class="input-group">
                                            <input type="text" id="hotel" class="form-control border-left-dark"
                                                placeholder="Ingrese el nombre del hotel" required value="Las Lorenas">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text rounded-right" id="basic-addon1"><i
                                                        class="fas fa-users"></i></span>
                                            </div>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-6">
                                        <label for="" class="form-label">Fecha de salida</label>
                                        <div class="input-group">
                                            <input type="date" id="" class="form-control border-left-dark" required
                                                value="2022-09-22">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text rounded-right" id="basic-addon1"><i
                                                        class="fas fa-users"></i></span>
                                            </div>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="" class="form-label">Fecha de regreso</label>
                                        <div class="input-group">
                                            <input type="date" id="" class="form-control border-left-dark" required
                                                value="2022-09-29">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text rounded-right" id="basic-addon1"><i
                                                        class="fas fa-users"></i></span>
                                            </div>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-6">
                                        <label for="" class="form-label">Lugar de salida</label>
                                        <div class="input-group">
                                            <input type="text" id="" class="form-control border-left-dark"
                                                placeholder="Ingrese el nombre del " required
                                                value="Terminal del Norte">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text rounded-right" id="basic-addon1"><i
                                                        class="fas fa-users"></i></span>
                                            </div>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="" class="form-label">Imagen</label>
                                        <div class="input-group">
                                            <input type="file" id="" class="form-control border-left-dark" required>
                                            <div class="input-group-prepend">
                                                <span class="input-group-text rounded-right" id="basic-addon1"><i
                                                        class="fas fa-users"></i></span>
                                            </div>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-3">
                                        <label for="" class="form-label">Cupos</label>
                                        <div class="input-group">
                                            <input type="number" id="" class="form-control border-left-dark"
                                                placeholder="Numero de cupos" required value="40">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text rounded-right" id="basic-addon1"><i
                                                        class="fas fa-users"></i></span>
                                            </div>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-3">
                                        <label for="" class="form-label">Disponibles</label>
                                        <div class="input-group">
                                            <input type="number" id="" class="form-control border-left-dark" required
                                                value="40">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text rounded-right" id="basic-addon1"><i
                                                        class="fas fa-users"></i></span>
                                            </div>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-3">
                                        <label for="" class="form-label">Precio</label>
                                        <div class="input-group">
                                            <input type="number" id="" class="form-control border-left-dark"
                                                placeholder="Precio del paquete" required value="350000">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text rounded-right" id="basic-addon1"><i
                                                        class="fas fa-users"></i></span>
                                            </div>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-3">
                                        <label for="status" class="form-label">Estado</label>
                                        <select class="custom-select border-left-dark" id="status" required>
                                            <option disabled value="">Seleccione</option>
                                            <option selected value="1">Habilitado</option>
                                            <option value="2">Deshabilitado</option>
                                        </select>
                                        <div class="invalid-feedback">
                                            Por favor seleccione una opción.
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer d-flex justify-content-center">
                                    <div class="row">
                                        <div class="col">
                                            <button type="button" id="cancelButton"
                                                class="btn btn-danger">Cancelar</button>
                                        </div>
                                        <div class="col">
                                            <button type="submit" id="saveButton"
                                                class="btn btn-success">Guardar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>


                    </div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2021</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

