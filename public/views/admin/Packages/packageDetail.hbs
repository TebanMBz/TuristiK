<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1,
            shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Paquetes-Turistik</title>

    <!-- Custom fonts for this template -->
    <link href="../vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="../css/sb-admin-2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="../css/site.css" />
    <link href="../../vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        {{>sidebar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column  vh-100">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                {{>topbar}}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- DataTable Roles -->
                    <div class="card shadow mb-4 border-left-dark">
                        <div class="card-header text-center py-3">
                            <div class="row">
                                <div class="col text-dark">
                                    <h2 class="m-0 font-weight-bold">Detalles del paquete</h2>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-8">
                                    <div class="packageDetail">
                                        <div class="card shadow mb-4">
                                            <div class="image-container">
                                                <div class="contentState">
                                                    <div class="row">
                                                        <div class="col-12 ">
                                                            <div class="contentParallax text-left">
                                                                <center>
                                                                <h1 class="h3" id="stateParallax">Activo</h1>
                                                                </center>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="content">
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <div class="contentParallax text-left">
                                                                <h1 class="h3" id="title-parallax">Detalles</h1>
                                                            </div>
                                                            <div class="contentParallax  text-left">
                                                                <p class="h5" id="contentParallax">Lorem ipsum, dolor
                                                                    sit amet consectetur adipisicing elit. Aliquid
                                                                    quisquam nisi repellat alias, possimus sed veritatis
                                                                    blanditiis vitae harum doloremque nostrum voluptas,
                                                                    omnis quo iure a aliquam
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="card shadow mb-4 border-left-dark">
                                        <div class="card-header text-center py-3 align-items-center text-center">
                                            <div class="row">
                                                <div class="col text-dark">
                                                    <h2 class="m-0 font-weight-bold">Información</h2>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-6">
                                                    <div class="nameField">
                                                        <label for="nameField"><b>Nombre</b></label>
                                                        <p id="nameField"> Escapada al peñol</p>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="destinyField">
                                                        <label for="destinyField"><b>Destino</b></label>
                                                        <p id="destinyField">Guatape</p>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr>
                                            <div class="row">
                                                <div class="col-6">
                                                    <div class="transportField">
                                                        <label for="transportField"><b>Transporte</b></label>
                                                        <p id="transportField">Aereo</p>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="hotelField">
                                                        <label for="hotelField"><b>Hotel</b></label>
                                                        <p id="hotelField">Las Lorenas</p>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr>
                                            <div class="row">
                                                <div class="col-6">
                                                    <div class="departureField">
                                                        <label for="departureField"><b>Fecha de salida</b></label>
                                                        <p id="departureField">15/09/2022</p>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="returnField">
                                                        <label for="returnField"><b>Fecha de regreso</b></label>
                                                        <p id="returnField">20/09/2022</p>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr>
                                            <div class="row">
                                                <div class="col-6">
                                                    <div class="placeField">
                                                        <label for="placeField"><b>Lugar de salida</b></label>
                                                        <p id="placeField">Terminal del Norte</p>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="priceField">
                                                        <label for="priceField"><b>Precio</b></label>
                                                        <p id="priceField">$350.000</p>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr>
                                            <div class="row">
                                                <div class="col-6">
                                                    <div class="placeField">
                                                        <label for="placeField"><b>Cupos</b></label>
                                                        <p id="placeField">43</p>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="priceField">
                                                        <label for="priceField"><b>Cupos disponibles</b></label>
                                                        <p id="priceField">36</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                            <div class="card-footer d-flex justify-content-end">
                                <div class="row">
                                    <div class="col">
                                        <a href="/packages" class="btn btn-dark">Volver</a>
                                    </div>
                                    <div class="col">
                                        <a href="/editPackage" class="btn btn-primary">Editar</a>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            {{>footer}}
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    {{>logoutModal}}



    <!-- Bootstrap core JavaScript-->
    <script src="../vendor/jquery/jquery.min.js"></script>
    <script src="../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!--SweetAlert JavaScript-->
    <script src="../js/sweetalert2.all.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="../vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="../js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="../vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="../vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <!-- Page level custom scripts -->
    <script src="../js/demo/datatables-demo.js"></script>

    <!-- Page level plugins -->
    <script src="../../vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="../../js/demo/chart-area-demo.js"></script>
    <script src="../../js/demo/chart-pie-demo.js"></script>
    <script src="../../js/demo/chart-bar-demo.js"></script>

    <script>
        $("#deletePackage").click(function () {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Deleted!',
                        'Your file has been deleted.',
                        'dark'
                    )
                }
            })
        });
    </script>
</body>

</html>