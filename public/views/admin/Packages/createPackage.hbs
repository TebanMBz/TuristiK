<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Crear paquete-Turistik</title>

    <!-- Custom fonts for this template-->
    <link href="../../../vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet" />

    <!-- Custom styles for this template-->
    <link href="../../../css/sb-admin-2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="../../../css/site.css" />

    <!--SweetAlert-->
    <link rel="stylesheet" href="../../../css/sweetalert2.min.css" />
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        {{>sidebar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                {{>topbar}}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <div class="card shadow border-left-dark">
                        <div class="card-header py-3 d-flex justify-content-start">
                            <h2 class="m-0 font-weight-bold text-dark">
                                Agregar paquete
                            </h2>
                        </div>
                        <form class="needs-validation" novalidate>
                            <div class=" card-body d-flex justify-content-center">
                                <div class="w-100 p-2">
                                    <div class="row">
                                    <div class="form-group col-6">
                                        <label for="package_name" class="form-label">Nombre</label>
                                            <input type="text" id="package_name" class="form-control border-left-dark"
                                                placeholder="Ingrese el nombre del paquete" required>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="package_destiny" class="form-label">Destino</label>
                                        <div class="input-group">
                                            <input type="text" id="package_destiny" class="form-control border-left-dark"
                                                placeholder="Ingrese el destino del paquete" required>
                                            <div class="input-group-prepend">
                                                <span class="input-group-text rounded-right"><i
                                                        class="fas fa-umbrella-beach"></i></span>
                                            </div>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-12">
                                        <label for="package_details" class="form-label">Detalles</label>
                                            <textarea class="form-control border-left-dark"
                                                placeholder="Escriba la descripción del paquete acá"
                                                style="height: 100px" required id="package_details"></textarea>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-6">
                                        <label for="package_transportation" class="form-label">Transporte</label>
                                        <div class="input-group">
                                        <select class="custom-select border-left-dark" id="package_transportation" required>
                                            <option selected disabled value="">Seleccione el tipo de transporte</option>
                                            <option value="1">Aereo</option>
                                            <option value="2">Terreste</option>
                                        </select>
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-bus"></i></span>
                                        </div>
                                        <div class="invalid-feedback">
                                            Por favor seleccione una opción.
                                        </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="hotel" class="form-label">Hotel</label>
                                        <div class="input-group">
                                            <input type="text" id="package_hotel" class="form-control border-left-dark"
                                                placeholder="Ingrese el nombre del hotel" required>
                                            <div class="input-group-prepend">
                                                <span class="input-group-text rounded-right"><i
                                                        class="fa fa-hotel"></i></span>
                                            </div>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-6">
                                        <label for="package_departure_date" class="form-label">Fecha de salida</label>
                                        <div class="input-group">
                                            <input type="date" id="package_departure_date" class="form-control border-left-dark" required>
                                            <div class="input-group-prepend">
                                                <span class="input-group-text rounded-right"><i
                                                        class="fas fa-calendar-day"></i></span>
                                            </div>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="package_return_date" class="form-label">Fecha de regreso</label>
                                        <div class="input-group">
                                            <input type="date" id="package_return_date" class="form-control border-left-dark" required>
                                            <div class="input-group-prepend">
                                                <span class="input-group-text rounded-right"><i
                                                        class="fas fa-calendar-week"></i></span>
                                            </div>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-6">
                                        <label for="package_departure_place" class="form-label">Lugar de salida</label>
                                        <div class="input-group">
                                            <input type="text" id="package_departure_place" class="form-control border-left-dark"
                                                placeholder="Ingrese el lugar de encuentro" required>
                                            <div class="input-group-prepend">
                                                <span class="input-group-text rounded-right"><i
                                                        class="fas fa-location-arrow"></i></span>
                                            </div>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-6">
                                        <div class="form-group">
                                                <label for="package_img">Imagen del paquete</label>
                                                <div class="input-group">
                                                    <div class="input-group-append">
                                                        <span class="input-group-text rounded-left"><i
                                                                class="fas fa-file-archive"></i></span>
                                                    </div>
                                                    <div class="custom-file">
                                                        <input type="file" class="custom-file-input" id="package_img"
                                                            required>
                                                        <label class="custom-file-label" for="package_img">Suba la
                                                            imagen del paquete acá</label>
                                                    </div>
                                                </div>
                                                <div class="invalid-feedback">
                                                    Este campo no puede enviarse vacio.
                                                </div>
                                            </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-4">
                                        <label for="package_price" class="form-label">Precio</label>
                                        <div class="input-group">
                                            <input type="number" id="package_price" class="form-control border-left-dark"
                                                placeholder="Precio del paquete" required>
                                            <div class="input-group-prepend">
                                                <span class="input-group-text rounded-right"><i
                                                        class="fas fa-dollar-sign"></i></span>
                                            </div>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group col-4">
                                        <label for="package_quotas" class="form-label">Cupos</label>
                                            <input type="number" id="package_quotas" class="form-control border-left-dark"
                                                placeholder="Ingrese el número de cupos" required>
                                            <div class="invalid-feedback">
                                                Este campo es obligatorio.
                                            </div>
                                    </div>
                                    <div class="form-group col-4">
                                        <label for="status" class="form-label">Estado</label>
                                        <div class="input-group">
                                        <select class="custom-select border-left-dark" id="status" required>
                                            <option selected disabled value="">Seleccione un estado</option>
                                            <option value="1">Habilitado</option>
                                            <option value="2">Deshabilitado</option>
                                        </select>
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-user-cog"></i></span>
                                        </div>
                                        <div class="invalid-feedback">
                                            Por favor seleccione una opción.
                                        </div>
                                        </div>
                                    </div>
                                </div>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-end">
                                <div class="row">
                                    <div class="col">
                                        <button type="button" id="cancelButton" class="btn btn-danger">Cancelar</button>
                                    </div>
                                    <div class="col">
                                        <button type="submit" id="saveButton" class="btn btn-success">Guardar</button>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2021</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    {{> logoutModal}}

    <!-- Bootstrap core JavaScript-->
    <script src="../../../vendor/jquery/jquery.min.js"></script>
    <script src="../../../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="../../../vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="../../../js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="../../../vendor/chart.js/Chart.min.js"></script>

    <!--SweetAlert JavaScript-->
    <script src="../../../js/sweetalert2.all.min.js"></script>

    <script>
        //Form validation
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        //SweetAlert2 alerts
        $('#cancelButton').click(() => {
            Swal.fire({
                title: 'Cancelado!',
                text: 'Has cancelado el proceso.',
                icon: 'error',
                showConfirmButton: false,
                timerProgressBar: true,
                timer: 1200
            })
            setTimeout( function() { window.location.href = "/packages"; }, 1200 );
        })

        // $('#saveButton').click(() => {
        //     Swal.fire({
        //         title: 'Tarea exitosa!',
        //         text: 'Se ha agregado el (nombre).',
        //         icon: 'success',
        //         showConfirmButton: false,
        //         timerProgressBar: true,
        //         timer: 1200
        //     })
        // })
    </script>

    <script>

        $("#btnCreatePackage").click(function () {
            Swal.fire({
                icon: "dark",
                title: "El paquete se agrego exitosamente.",
                showConfirmButton: false,
                timer: 2500,
            });
        });

        $("#btnCancelarPackage").click(function () {
            Swal.fire({
                icon: "error",
                title: "El paquete se ha cancelado",
            });
        });
    </script>
</body>

</html>