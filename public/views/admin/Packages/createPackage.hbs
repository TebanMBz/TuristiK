<!DOCTYPE html>
<html lang="es">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Agregar paquete admin</title>

    <!-- Custom fonts for this template -->
    <link href="../../vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="../../css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Custom styles for this page -->

</head>

<body id="page-top">


    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {{> sidebar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {{> topbar}}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Form agregar paquete -->
                    <div class="card shadow border-left-dark mb-4">
                        <div class="card-header py-3">
                            <h4 class="m-0 font-weight-bold text-dark"><span>Agregar paquete</span></h4>
                        </div>
                        <form class="pt-5">
                            <div class="container justify-content-center align-items-center">
                                <div class="row">
                                    <div class="form-group col-6">
                                        <label for="" class="form-label font-weight-bold">Nombre</label>
                                        <input type="text" placeholder="Ingrese el nombre del paquete" class="form-control border-left-dark"/>
                                    </div>

                                    <div class="form-group col-6">
                                        <label for="" class="form-label font-weight-bold">Destino</label>
                                        <input type="text"  placeholder="Ingrese el Destino del paquete"  class="form-control border-left-dark" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-12">
                                        <label for="floatingTextarea" class="font-weight-bold">Detalles</label>
                                        <textarea class="form-control border-left-dark"
                                            placeholder="Escribe una descripcion aqui" id="floatingTextarea"
                                            style="height: 100px"></textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-6">
                                        <label for="" class="form-label font-weight-bold">Transporte</label>
                                        <select class="form-control border-left-dark">
                                            <option value="">Aereo</option>
                                            <option value="">Terrestre</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="" class="form-label font-weight-bold">Hotel</label>
                                        <input type="text"  placeholder="Ingrese el hotel del paquete"  class="form-control border-left-dark"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-6">
                                        <label for="" class="form-label font-weight-bold">Fecha de salida</label>
                                        <input type="date"  class="form-control border-left-dark" id="date"/>
                                    </div>
                                    <div class="form-group col-6">
                                        <label for="" class="form-label font-weight-bold">Fecha de regreso</label>
                                        <input type="date" class="form-control border-left-dark"/>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-12">
                                        <label for="" class="form-label font-weight-bold">Lugar de salida</label>
                                        <input type="text"  placeholder="Ingrese el lugar de salida del paquete"  class="form-control border-left-dark" />
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group col-3">
                                        <label for="" class="form-label font-weight-bold">Cupos</label>
                                        <input type="number"  placeholder="Ingrese el numero de cupos"  class="form-control border-left-dark"/>
                                    </div>
                                    <div class="form-group col-3">
                                        <label for="" class="form-label font-weight-bold">Disponibles</label>
                                        <input type="number" class="form-control border-left-dark"/>
                                    </div>
                                    <div class="form-group col-3">
                                        <label for="" class="form-label font-weight-bold">Precio</label>
                                        <input type="number" placeholder="Ingrese el precio del paquete"  class="form-control border-left-dark"/>
                                    </div>
                                    <div class="form-group col-3">
                                        <label for="" class="form-label font-weight-bold">Estado</label>
                                        <select class="form-control border-left-dark">
                                            <option value="">Habilitado</option>
                                            <option value="">Deshabilitado</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="row mt-3 mb-4 mr-0 d-flex justify-content-center">
                                    <button type="button" class="btn btn-danger" id="btnCancelarPackage">
                                        Cancelar
                                    </button>
                                    <button type="button" class="btn btn-success ml-4" id="btnCreatePackage">
                                        Guardar Cambios
                                    </button>
                                </div>
                            </div>
                        </form>


                    </div>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            {{> footer}}
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">
                    Select "Logout" below if you are ready to end your current session.
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">
                        Cancel
                    </button>
                    <a class="btn btn-primary" href="../login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="../../vendor/jquery/jquery.min.js"></script>
    <script src="../../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="../../vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="../../js/sb-admin-2.min.js"></script>

    <!--SweetAlert JavaScript-->
    <script src="../../js/sweetalert2.all.min.js"></script>

    <script>
        $("#btnCreatePackage").click(function () {
            Swal.fire({
                title: 'Cancelado!',
                text: 'Has cancelado el proceso.',
                icon: 'error',
                showConfirmButton: false,
                timerProgressBar: true,
                timer: 1200
            })
        })

